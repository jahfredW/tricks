    /**
     * ajout des produits au panier
     * @param {string} name 
     * @param {float} price 
     */
    function addToCart(name, price) {
        // parcours le panier et on cherche si le nom d'une plante existe déja
		const currentPlantSaved = cart.find((plant) => plant.name === name)
        // si c'est la cas, On re crée un tableau qui exclut tous les éléments ayant un nom 
        // correspondant à la varaible name 
		if (currentPlantSaved) {
			const cartFilteredCurrentPlant = cart.filter(
				(plant) => plant.name !== name
			)
            // on met à jour le panier avec les éléments du tableau précédent, auquel on ajout une 
			updateCart([
				...cartFilteredCurrentPlant,
				{ name, price, amount: currentPlantSaved.amount + 1 }
			])
		} else {
			updateCart([...cart, { name, price, amount: 1 }])
		}
	}
